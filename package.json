{
  "name": "ts-flatten-array",
  "version": "1.0.0",
  "description": "Array Flatten with Typescript",
  "main": "lib/flatten-array.js",
  "types": "lib/flatten-array.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SafaSelim/ts-flatten-array.git"
  },
  "keywords": ["Array","Flatten","Typescript"],
  "author": "Safa Selim",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SafaSelim/ts-flatten-array/issues"
  },
  "homepage": "https://github.com/SafaSelim/ts-flatten-array#readme",
  "devDependencies": {
    "@types/benchmark": "^2.1.1",
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "files": [
    "lib/**/*"
  ]
}
